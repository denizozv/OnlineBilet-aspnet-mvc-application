@model Director

@{
    ViewData["Title"] = "Detaylar";
}

<div class="row text">
    <div class="col-md-8 offset-2">

        <p>
            <h1>@Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width:150px" id="ProfilePicturePreview" />
                </div>

                <div class="form-group">
                    <label asp-for="ProfilePictureUrl"></label>
                    <input asp-for="ProfilePictureUrl" class="form-control" readonly />
                    <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group">
                     @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                    <a class="btn btn-outline-success float-right " asp-action="Edit" asp-route-id="@Model.Id">Güncelle</a>
                            }
                    <a class="btn btn-outline-secondary" asp-action="Index">Hepsini Göster</a>
                </div>



            </div>


        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureUrl").val();
        })
    </script>
}
